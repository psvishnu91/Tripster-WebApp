doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="")
    meta(name="author", content="")
    title= "Tripster - Create an Album"
    // Bootstrap Core CSS
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
    // MetisMenu CSS
    link(href="/stylesheets/metisMenu.min.css", rel="stylesheet")
    // Custom CSS
    link(href="/stylesheets/sb-admin-2.css", rel="stylesheet")
    // Custom Fonts
    link(href="/stylesheets/font-awesome.min.css", rel="stylesheet", type="text/css")
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
      script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
  body
    form.form-horizontal(action='/album', method='post')
      fieldset
        // Form Name
        legend Create an Album
        // Text input
        .control-group
          label.control-label(for='albumname') Album Name:
          .controls
            input#albumname.input-xlarge(name='albumname', type='text', placeholder='album name')
        // Select Basic
        .control-group
          label.control-label(for='privacy') Privacy Setting:
          .controls
            select#privacy.input-xlarge(name='privacy')
              option private
              option sharedWithTripMembers
              option public
          .controls
            -console.log(TRIP_ID)
            input#tripid(name='trip_id', value=TRIP_ID, style='display:none')
        // Button
        .control-group
          label.control-label(for='createAlbum')
          .controls
            input#createAlbum.btn.btn-success(name='createAlbum', type='submit' value="Create")

      // jQuery
    script(src="/javascripts/jquery.js")
    // Bootstrap Core JavaScript
    script(src="/javascripts/bootstrap.min.js")
    // Metis Menu Plugin JavaScript
    script(src="/javascripts/metisMenu.min.js")
    // Custom Theme JavaScript
    script(src="/javascripts/sb-admin-2.js")
